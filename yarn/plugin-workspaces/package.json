{
  "name": "@monstrs/yarn-plugin-workspaces",
  "version": "0.2.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts"
  },
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "builder build plugin",
    "prepack": "yarn run build",
    "postpack": "rm -rf dist"
  },
  "dependencies": {
    "@monstrs/yarn-plugin-files": "workspace:0.2.1",
    "@monstrs/yarn-workspace-utils": "workspace:0.2.1",
    "clipanion": "^4.0.0-rc.4"
  },
  "devDependencies": {
    "@yarnpkg/builder": "^4.1.2",
    "@yarnpkg/cli": "^4.4.1",
    "@yarnpkg/core": "^4.1.2",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "@yarnpkg/cli": "^4",
    "@yarnpkg/core": "^4"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
  }
}
