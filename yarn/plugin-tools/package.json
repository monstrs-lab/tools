    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@types/semver": "^7.5.8",
    "@yarnpkg/builder": "^4.2.0",
    "@yarnpkg/cli": "^4.5.1",
    "@yarnpkg/core": "^4.1.4",
    "@yarnpkg/fslib": "^3.1.0"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
