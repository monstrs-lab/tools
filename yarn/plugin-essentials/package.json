{
  "name": "@monstrs/yarn-plugin-essentials",
  "version": "0.0.0",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:compile": "builder build plugin",
    "build:move": "mkdir -p dist/@monstrs && mv bundles/@yarnpkg/* dist/@monstrs",
    "build:patch": "sed -i -- 's|@yarnpkg/plugin-|@monstrs/plugin-|g' ./dist/@monstrs/*.js",
    "build": "run build:compile && run build:move && run build:patch",
    "postpack": "rm -rf dist",
    "prepack": "run build"
  },
  "dependencies": {
    "@monstrs/yarn-plugin-commit": "workspace:0.0.0"
  },
  "devDependencies": {
    "@yarnpkg/builder": "^2.1.3",
    "@yarnpkg/core": "^2.4.0"
  },
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts"
  }
}
