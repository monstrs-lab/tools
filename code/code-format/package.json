{
  "name": "@monstrs/code-format",
  "version": "1.0.2",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts"
  },
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn library build",
    "prepack": "yarn run build",
    "postpack": "rm -rf dist"
  },
  "dependencies": {
    "@monstrs/config-prettier": "workspace:1.0.1",
    "@monstrs/prettier-plugin": "workspace:1.0.2",
    "globby": "^13.2.2",
    "ignore": "^5.3.2",
    "prettier": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^22.9.0"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
  }
}
