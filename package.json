{
  "name": "tools",
  "private": true,
  "scripts": {
    "version:patch": "yarn workspaces foreach --topological --no-private version patch",
    "release:publish": "yarn workspaces foreach --topological --no-private npm publish --tolerate-republish --tag next",
    "release:build": "yarn workspaces foreach --topological --no-private run build",
    "release": "yarn release:build && yarn release:publish",
    "lint": "mctl lint",
    "test:unit": "mctl test:unit",
    "test:integration": "mctl test:integration",
    "commit": "mctl commit",
    "format": "mctl format",
    "typecheck": "mctl typecheck",
    "checkcommit": "mctl precommit"
  },
  "devDependencies": {
    "@monstrs/mctl-cli": "workspace:0.2.87",
    "@monstrs/tsconfig": "^0.2.0",
    "@types/node": "^14.14.28",
    "@yarnpkg/pnpify": "^2.4.0",
    "husky": "4.3.8",
    "typescript": "^4.1.5"
  },
  "workspaces": [
    "buildpack/*",
    "prettier/*",
    "code/**/*",
    "webpack/*",
    "ctl/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "mctl precommit",
      "commit-msg": "mctl commitmsg"
    }
  },
  "resolutions": {
    "@types/estree": "0.0.45",
    "@types/eslint": "7.2.3",
    "@types/react": "17.0.2"
  }
}
